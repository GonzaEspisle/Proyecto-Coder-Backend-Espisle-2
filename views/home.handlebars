<h1>Listado de Productos</h1>
<p>P치gina {{page}} de {{totalPages}}</p>

{{! --- Controles de Filtro y Ordenamiento --- }}
<div style="margin-bottom: 20px;">
  <h3>Filtros y Ordenamiento</h3>
  <form action="/products" method="GET">
    <label for="query">Buscar por Categor칤a o Disponibilidad (true/false):</label>
    <input type="text" name="query" id="query" value="{{currentQuery}}">
    
    <label for="limit">L칤mite:</label>
    <input type="number" name="limit" id="limit" value="{{currentLimit}}" min="1" style="width: 50px;">
    
    <label for="sort">Ordenar por Precio:</label>
    <select name="sort" id="sort">
      {{! Uso de Helper 'eq' como bloque condicional para el atributo 'selected' }}
      <option value="" {{#eq currentSort ""}}selected{{/eq}}>Sin Orden</option>
      <option value="asc" {{#eq currentSort 'asc'}}selected{{/eq}}>Ascendente (Menor a Mayor)</option>
      <option value="desc" {{#eq currentSort 'desc'}}selected{{/eq}}>Descendente (Mayor a Menor)</option>
    </select>
    
    <button type="submit">Aplicar</button>
    <a href="/products">Limpiar Filtros</a>
  </form>
</div>
{{! --- Fin Controles --- }}


{{! --- Listado de Productos --- }}
<div class="product-list">
  {{#if products}}
    <ul>
      {{#each products}}
        <li>
          <h4>{{this.title}}</h4>
          <p><strong>Precio:</strong> ${{this.price}}</p>
          <p><strong>Stock:</strong> {{this.stock}} | <strong>Categor칤a:</strong> {{this.category}}</p>
          <p>
            <a href="/products/{{this._id}}" style="margin-right: 15px;">Ver Detalle</a> 
            <button onclick="addToCart('{{this._id}}')">游 Agregar al Carrito</button>
          </p>
          <hr>
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p>No se encontraron productos con los filtros aplicados.</p>
  {{/if}}
</div>
{{! --- Fin Listado --- }}


{{! --- Paginaci칩n --- }}
<div class="pagination-controls" style="margin-top: 20px;">
  {{#if hasPrevPage}}
    <a href="{{prevLink}}">춺 Anterior</a>
  {{else}}
    <button disabled>춺 Anterior</button>
  {{/if}}

  <span style="margin: 0 15px;">P치gina {{page}}</span>

  {{#if hasNextPage}}
    <a href="{{nextLink}}">Siguiente 췉</a>
  {{else}}
    <button disabled>Siguiente 췉</button>
  {{/if}}
</div>
{{! --- Fin Paginaci칩n --- }}

